{
  "name": "mpv-yomitan-overlay",
  "version": "0.1.0",
  "description": "MPV subtitle overlay with Yomitan dictionary lookup support",
  "main": "dist/main.js",
  "scripts": {
    "build": "pnpm clean&& tsc && cp src/renderer/index.html src/renderer/style.css dist/renderer/",
    "clean": "rm -f dist/*.AppImage",
    "start": "pnpm run build && electron . --start",
    "dev": "pnpm run build && electron . --start --dev",
    "stop": "electron . --stop",
    "toggle": "electron . --toggle",
    "build:appimage": "pnpm run build && electron-builder --linux AppImage"
  },
  "keywords": [
    "mpv",
    "yomitan",
    "japanese",
    "subtitles",
    "overlay"
  ],
  "author": "",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/ws": "^8.18.1",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.sudacode.mpv-yomitan",
    "productName": "mpv-yomitan",
    "icon": "assets/mpv-yomitan.png",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo"
    },
    "files": [
      "dist/**/*",
      "vendor/texthooker-ui/docs/**/*",
      "vendor/texthooker-ui/package.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "vendor/yomitan",
        "to": "yomitan"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  }
}
